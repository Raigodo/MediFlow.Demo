{
	"singleQuote": true,
	"printWidth": 80,
	"editor.formatOnSave": true,
	"proseWrap": "always",
	"tabWidth": 4,
	"requireConfig": false,
	"useTabs": true,
	"trailingComma": "all",
	"bracketSpacing": true,
	"jsxBracketSameLine": false,
	"semi": true,
	"overrides": [
		{
			"files": "*.ts",
			"options": {
				"useTabs": true,
				"tabWidth": 4
			}
		},
		{
			"files": ["*.tsx", "*.json"],
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		}
	]
}
